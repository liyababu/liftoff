
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{ this.item.title }}</strong><br/>
                </div>
                <div class="col-xs-6 text-right">
                    Qty:{{ this.quantity }}</span>
                </div>
                <div class="col-xs-6 text-right">
                    Price:${{ this.price }} 
                </div>
                <div class="col-xs-5 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total:${{ totalPrice }}</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Checkout</a>
    </div>
{{ else }}
    Your shopping cart is empty.
{{/if}}
